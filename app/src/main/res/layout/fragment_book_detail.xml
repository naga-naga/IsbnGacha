<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/titleLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/titleLabelTextView"
        app:layout_constraintTop_toTopOf="@+id/titleLabelTextView" />

    <TextView
        android:id="@+id/isbnLabelTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:gravity="end"
        android:text="@string/isbn_label_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookImage" />

    <TextView
        android:id="@+id/titleLabelTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/title_label_text"
        app:layout_constraintEnd_toEndOf="@+id/isbnLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/isbnLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/isbnLabelTextView" />

    <TextView
        android:id="@+id/authorLabelTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/author_label_text"
        app:layout_constraintEnd_toEndOf="@+id/titleLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/titleLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleLabelTextView" />

    <TextView
        android:id="@+id/publisherLabelTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/publisher_label_text"
        app:layout_constraintEnd_toEndOf="@+id/authorLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/authorLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/authorLabelTextView" />

    <TextView
        android:id="@+id/pubdateLabelTextView"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:text="@string/pubdate_label_text"
        app:layout_constraintEnd_toEndOf="@+id/publisherLabelTextView"
        app:layout_constraintStart_toStartOf="@+id/publisherLabelTextView"
        app:layout_constraintTop_toBottomOf="@+id/publisherLabelTextView" />

    <TextView
        android:id="@+id/pubdateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/pubdateLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/pubdateLabelTextView"
        app:layout_constraintTop_toTopOf="@+id/pubdateLabelTextView" />

    <TextView
        android:id="@+id/publisherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/publisherLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/publisherLabelTextView"
        app:layout_constraintTop_toTopOf="@+id/publisherLabelTextView" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/authorLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/authorLabelTextView"
        app:layout_constraintTop_toTopOf="@+id/authorLabelTextView" />

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="150dp"
        android:layout_height="212dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/isbnTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/isbnLabelTextView"
        app:layout_constraintStart_toEndOf="@+id/isbnLabelTextView"
        app:layout_constraintTop_toTopOf="@+id/isbnLabelTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>